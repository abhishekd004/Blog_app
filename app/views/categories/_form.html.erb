<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :name, "Category Name", class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center mt-4">
                    <%= f.submit class: "btn btn-outline-success btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>    

