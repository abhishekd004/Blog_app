<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-10">
            <%= render 'shared/errors', obj: @comment %>
            <%= form_with(model: @comment, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :body, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.text_area :body, rows: 5, class: "form-control shadow rounded", placeholder: "Comment here" %>
                    </div>
                    <%= hidden_field_tag 'article_id', @article_id %>
                </div>
                <div class="form-group row justify-content-center mt-4">
                    <%= f.submit class: "btn btn-outline-success btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ Cancel and return to Home ]', articles_path, class: "row justify-content-center text-info" %>
        </div>
    </div>
</div>    

