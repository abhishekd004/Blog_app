<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center mt-4">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success btn-lg") %>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ Cancel and return to Home ]', articles_path, class: "row justify-content-center text-info" %>
        </div>
    </div>
</div>    

