<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :description, class: "col-2 col-form-label", id:"label-field" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Decription of article" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center mt-4">
                    <%= f.submit class: "btn btn-outline-success btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ Cancel and return to Home ]', articles_path, class: "row justify-content-center text-info" %>
        </div>
    </div>
</div>    

